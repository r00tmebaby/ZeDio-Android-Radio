<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/pad"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="clip_horizontal"
              android:background="#3F51B5"
              android:orientation="vertical"
              android:padding="10dp"
              tools:context=".MainActivity">
    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="5dp"
            android:background="#3F51B5"
            android:orientation="horizontal">

        <Spinner
                android:id="@+id/filter_by"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:foregroundTint="#03A9F4"
                android:spinnerMode="dropdown" />

        <androidx.appcompat.widget.SearchView
                android:id="@+id/search_radio"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#FFFFFF"
                android:queryHint="Search Here" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/playing_radio_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="#2196F3"
            android:orientation="vertical"
            >

        <!-- Radio info -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
            <TextView
                    android:id="@+id/radio_info_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="16sp"
                    android:gravity="center" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/playing_name"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@color/material_on_background_disabled"
                    android:layout_weight="3"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/cardview_light_background" />

            <ImageButton
                    android:id="@+id/start_recording"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_stop_record_24" />

            <ImageButton
                    android:id="@+id/stop_playing"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_stop_24" />
        </LinearLayout>
    </LinearLayout>

    <!-- Container for the RecyclerView -->
    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="#2196F3"
            android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/radio_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6563B2"
                android:padding="5dp"
                android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
